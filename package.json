{
    "name": "task-manager",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "rollup --config",
        "watch": "rollup --config --watch",
        "start": "node dist/index.js",
        "dev": "env-cmd --file .env nodemon dist/index.js",
        "debug": "env-cmd --file .env nodemon --inspect dist/index.js",
        "docker:build": "docker build --tag hazardsoft/task-manager@latest .",
        "docker:run": "docker run --env-file .env.docker --publish 3000:3000/tcp --detach hazardsoft/task-manager:latest",
        "docker-compose:up": "docker compose --env-file .env.docker-compose up --detach",
        "docker-compose:down": "docker compose --env-file .env.docker-compose down",
        "test": "exit  0"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@sendgrid/mail": "^8.1.0",
        "bcrypt": "^5.1.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.0",
        "mongodb": "^6.0.0",
        "mongoose": "^8.0.4",
        "multer": "^1.4.5-lts.1",
        "sharp": "^0.33.2",
        "validator": "^13.9.0"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.1.1",
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/multer": "^1.4.11",
        "@types/node": "^18.16.16",
        "@types/validator": "^13.7.17",
        "env-cmd": "^10.1.0",
        "nodemon": "^2.0.22",
        "rollup": "^3.24.0",
        "tslib": "^2.5.3",
        "typescript": "^5.1.3"
    },
    "type": "module"
}
